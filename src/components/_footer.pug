mixin footer(pathPrefix = './')
  //- Footer Section Starts here
  footer.footer-section
    .container
      .footer-wrapper
        .footer-logo-wrap
          //- Footer Logo with text
          .footer-logo
            img(src=`${pathPrefix}assets/img/logo-text.svg`, alt="")
          p.hidden-text The core development team supporting the growth and success of the Carapace protocol  
        
        .footer-social-wrap
          p.f-title Social

          //- Footer Social Links
          ul 
            li
              a(href="https://github.com/starlings-lab" target="_blank") GitHub
            li
              a(href="https://twitter.com/starlings_lab" target="_blank") Twitter
      
      //- Footer Copyright
      .footer-lower-wrapper
        p Â© 2022 Starlings Lab. All rights reserved.
  //- Footer Section ends here      